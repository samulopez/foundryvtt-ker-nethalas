<div class="tab inventory scrollable {{tabs.inventory.cssClass}}"
     data-group="primary"
     data-tab="inventory">
  <div class="flexcol gap align-normal">
    <div class="flexrow gap-large align-normal">
      <div class="flexcol gap align-normal">
        <div>
          <div class="section-title">EQUIPPED GEAR</div>
        </div>
        <div>
          <div class="flexrow gap-small">
            <div class="section-title">WEALTH</div>
            <div class="section-title">SUPPLIES</div>
          </div>
        </div>
      </div>
      <div class="flexcol gap align-normal">
        <div>
          <div class="section-title">NON-ENCUMBERING ITEMS</div>
          <div class="items-section non-encumbering-items-list">
            <div class="items-header header">
              <h3 class="item-name">Name</h3>
              <div class="item-header item-price">Cost</div>
              <div class="item-header item-quantity">Quantity</div>
              <div class="item-header item-controls"></div>
            </div>
            <ol class="item-list unlist">
              {{#each nonEncumberingList as |item key| }}
                <li class="item collapsible collapsed"
                    data-uuid="{{item.uuid}}"
                    data-item-id="{{item.id}}"
                    data-entry-id="{{item.id}}"
                    data-item-name="{{item.name}}">
                  <div class="item-row" data-key="{{item.id}}">
                    <div class="item-name item-action">
                      <img class="item-image gold-icon"
                           src="{{item.img}}"
                           alt="{{item.name}}"
                           width="32"
                           height="32"
                           draggable="false" />
                      <div class="name name-stacked">
                        <span class="title">{{item.name}}</span>
                      </div>
                    </div>
                    <div class="item-detail item-price">{{item.system.cost}}</div>
                    <div class="item-detail item-quantity">
                      <a class="adjustment-button always-interactive"
                         data-action="decreaseQuantityItem"
                         data-tooltip="decrease quantity"
                         data-key="{{item.id}}">
                        <i class="fas fa-minus"></i>
                      </a>
                      {{item.system.quantity}}
                      <a class="adjustment-button always-interactive"
                         data-action="increaseQuantityItem"
                         data-tooltip="increase quantity"
                         data-key="{{item.id}}">
                        <i class="fas fa-plus"></i>
                      </a>
                    </div>
                    <div class="item-detail item-controls">
                      <button type="button"
                              class="unbutton config-button item-control item-action always-interactive"
                              data-tooltip="toggle description"
                              data-action="toggleExpand">
                        <i class="fas fa-expand"></i>
                      </button>
                      <button type="button"
                              class="unbutton config-button item-control item-action always-interactive"
                              data-tooltip="edit item"
                              data-key="{{item.id}}"
                              data-action="editItem">
                        <i class="fas fa-edit"></i>
                      </button>
                      <button type="button"
                              class="unbutton config-button item-control item-action always-interactive"
                              data-tooltip="delete item"
                              data-key="{{item.id}}"
                              data-action="removeItem">
                        <i class="fas fa-trash"></i>
                      </button>
                    </div>
                  </div>
                  <div class="item-description collapsible-content">
                    <span class="wrapper">
                      <div class="subtitle">Description</div>
                    {{editor item.system.description engine="prosemirror"}}</span>
                    <div class="wrapper">
                      <div class="subtitle">Notes</div>
                      {{editor item.system.notes engine="prosemirror"}}
                    </div>
                  </div>
                </li>
              {{/each}}
            </ol>
